int mystrlen(char *str)
{
  int len = 0;
  while(*str != '\0'){
    len++;
    str++;
  }
  return len;
}

void mysprintf(char *sbuf, char *str, ...)
{
  int j;
  char buffer[15];
  int ival;
  va_list ap;
  va_start(ap, str);
	
	
  for(; *str != '\0';){
    if(*str == '%'){
      str++;
      switch(*str){
      case 'd':
	ival = va_arg(ap, int);
	if(ival == 0){
	  *sbuf = '0';
	  sbuf++;
	}
	else{
	  for(j = 14; ival > 0; j--){
	    buffer[j] = ival % 10 + '0';
	    ival /= 10;
	  }
	  j++;
	  for(;j < 15;){
	    *sbuf = buffer[j];
	    sbuf++;
	    j++;
	  }
	}
	str++;
	break;
      case 's':
	break;
      default:
	break;
      }
    }
    else{
      *sbuf = *str;
      sbuf++;
      str++;
    }
  }
  *sbuf = '\0';
}
